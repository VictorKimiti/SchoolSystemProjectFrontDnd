<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:elevation="5dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/cardRelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:backgroundTint="#000000"
            android:text="Name: Ragnar Lodbrok"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal|bold" />


        <TextView
            android:id="@+id/registrationNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentName"
            android:layout_centerHorizontal="true"
            android:hint="Reg no.: C026-01-0994/2021"
            android:textColor="#000000"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/registrationNumber"
            app:dividerColor="#000000"
            app:dividerInsetEnd="10dp"
            app:dividerInsetStart="10dp" />

        <EditText
            android:id="@+id/editMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#000000"
            android:ems="14"
            android:hint="Enter marks"
            android:inputType="text"
            android:textColorHint="#AAA4A4" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>