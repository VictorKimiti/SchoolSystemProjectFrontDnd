<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="Welcome, please Sign in."
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:id="@+id/cardRelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <EditText
                android:id="@+id/registrationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:backgroundTint="#000000"
                android:ems="13"
                android:hint="Enter registration no./email"
                android:inputType="text"
                android:textColorHint="#AAA4A4"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/registrationNumber"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#000000"
                android:ems="13"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#AAA4A4" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#e70c9c"
                android:text="Sign in"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alreadyAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginBtn"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="6dp"
                android:text="Don't have an account?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAdminAccount"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginBtn"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toRightOf="@id/alreadyAccount"
                android:padding="0dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="Contact Admin"
                android:textColor="#277ee4"
                android:textStyle="bold"
                app:iconPadding="0dp" />

            <TextView
                android:id="@+id/lecAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alreadyAccount"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:text="Get into "
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLecturerAccount"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnAdminAccount"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toRightOf="@id/lecAccount"
                android:padding="0dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="Enter Lecturer"
                android:textColor="#277ee4"
                android:textStyle="bold"
                app:iconPadding="0dp" />

            <TextView
                android:id="@+id/forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lecAccount"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Forgot Password?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnForgotPass"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lecAccount"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toRightOf="@id/forgotPass"
                android:padding="0dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="Click here"
                android:textColor="#277ee4"
                android:textStyle="bold"
                app:iconPadding="0dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>